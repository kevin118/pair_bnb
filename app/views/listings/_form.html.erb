<div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Place your listing here</h3>
        </div>
         <div class="panel-body">
         
<div class="property-field">
  <%= form.label :property_name, "Property Name:"%>
  <%= form.text_field :property_name %>
</div>

<div class="address-field">
  <%= form.label :address, "Address:" %>
  <%= form.text_area :address %>
</div>

<div class="type-field">
  <%= form.label :property_type, "Property Type:" %>
  <%= form.select :property_type, [['Landed', 'Landed'], ['Strata', 'Strata']] %>
</div>

<div class="rental-field">
  <%= form.label :rental, "Rental Type:" %>
  <%= form.select :rental, [['Whole Unit','W'],['Single Room', 'R'], ['Shared Room', 'S']] %>
</div>

<%= form.label :smoking, "Allow smoking in property:" %>
<%= form.check_box :smoking, value: "smoking" %>
<br>
<%= form.label :gym, "Gym facilities:" %>  
<%= form.check_box :gym, value: "gym" %>
<br>
<%= form.label :internet, "Internet:" %>
<%= form.check_box :internet, value: "internet" %>
<br>
<%= form.label :tub, "Hot Tub:" %>
<%= form.check_box :tub, value: "hot tub" %>

<%= form.label :all_tags, "Labels:" %>
<%= form.text_field :all_tags%>


      <%= form.submit 'Go!', class:'btn btn-lg btn-default btn-block'%>
 

        </div>
      </div>
    </div>
  </div>
</div>
